<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="background">
        <item name="android:background">#FBC02D</item>
    </style>

    <style name="main_menu_button">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">#FFF3E0</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="pub_name" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="beer_price" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="distance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#795548</item>
    </style>

    <style name="pub_address" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#727272</item>
    </style>

    <style name="votes" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#795548</item>
    </style>

</resources>
